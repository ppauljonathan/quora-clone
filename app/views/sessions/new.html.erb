<%= form_with scope: :user, class: 'form center-align' do |form| %>
  <div class="form-heading">Login</div>
  <% if flash[:error] %>
    <div class="error-block">
      <%= flash[:error] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="message-block">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div>
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-field' %>
  </div>

  <div>
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-field' %>
  </div>

  <div>
    <%= form.check_box :remember_me, include_hidden: false %>
    <%= form.label :remember_me, 'Remember Me?' %>
  </div>
  <%= form.button 'Login', class: 'form-submit' %>

  <div class="form-messages">Not a user? <%= link_to 'Signup', signup_path %></div>
  <div class="form-messages"><%= link_to 'Forgot Password?', reset_password_path %></div>
<% end %>
