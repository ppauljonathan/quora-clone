<%= form_with scope: :user, class: 'form center-align' do |form| %>
  <div class="form-heading">Login</div>
  <% if flash[:error] %>
    <div class="error-block">
      <%= flash[:error] %>
      <div>
        click <%= link_to 'this link', confirmation_path %> to resend the email
      </div>
    </div>
  <% elsif @user&.errors&.any? %>
    <div class="error-block">
      <ul class="form-error-list">
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% elsif flash[:notice] %>
    <div class="message-block">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div>
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-field' %>
  </div>

  <div>
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-field' %>
  </div>

  <%= form.button 'Login', class: 'form-submit' %>

  <div class="form-messages">Not a user? <%= link_to 'Signup', signup_path %></div>
  <div class="form-messages">Forgot Password? <%= link_to 'reset password' %></div>
<% end %>
