<div class="center-align" style="text-align: center">
  <% if flash[:notice] %>
    <div class="message-block">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="error-block">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <div class="form-heading">Reset your Password</div>
  &nbsp;

  <div class="form-label">please enter the email to send password reset link</div>

  <%= form_with do |form| %>
    <%= form.email_field :email, class: 'form-field' %>
    <%= form.submit 'Submit', class: 'form-submit' %>
  <% end %>
</div>
