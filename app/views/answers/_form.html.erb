<%= form_with model: answer, class: 'answer-form' do |form| %>
  <%= form.label 'Write Your Answer', class: 'form-label' %>
  <%= form.hidden_field :question_id, value: question %>
  <%= form.hidden_field :content, id: 'answer-content' %>
  <trix-editor input="answer-content" class="my-trix-mod"></trix-editor>
  
  <br>
  <% if answer.published_at? %>
    <%= form.submit 'Save', class: 'form-submit' if answer.id %>
  <% else %>
    <%= form.submit 'Publish', class: 'form-submit' %>
    <%= form.submit 'Save as Draft', class: 'form-cancel' %>
  <% end %>
<% end %>
